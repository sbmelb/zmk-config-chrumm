/* Use software SPI bus for nice!view */

&spi_view {
    status = "okay";

    nice_view_display: nice_view_display@0 {
        compatible = "sharp,ls0xx";
        reg = <0>;
        spi-max-frequency = <2000000>;

        /* chip-select is handled in spi_view via cs-gpios */
        /* no MISO needed for memory LCD */

        /* nice_view specific pins normally defined here:
           extcomin-gpios, disp-gpios, etc.
           Leave them as-is from the default overlay. */
    };
};
