
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan;
        zmk,matrix_transform = &transform;
    };

    transform: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <5>;
        columns = <13>;

        /* Simple row/column identity mapping.
         * Row 0..4, Column 0..12
         */
        map = <
            RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) RC(0, 4) RC(0, 5) RC(0, 6) RC(0, 7) RC(0, 8) RC(0, 9) RC(0,10) RC(0,11) RC(0,12)
            RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) RC(1, 4) RC(1, 5) RC(1, 6) RC(1, 7) RC(1, 8) RC(1, 9) RC(1,10) RC(1,11) RC(1,12)
            RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3) RC(2, 4) RC(2, 5) RC(2, 6) RC(2, 7) RC(2, 8) RC(2, 9) RC(2,10) RC(2,11) RC(2,12)
            RC(3, 0) RC(3, 1) RC(3, 2) RC(3, 3) RC(3, 4) RC(3, 5) RC(3, 6) RC(3, 7) RC(3, 8) RC(3, 9) RC(3,10) RC(3,11) RC(3,12)
            RC(4, 0) RC(4, 1) RC(4, 2) RC(4, 3) RC(4, 4) RC(4, 5) RC(4, 6) RC(4, 7) RC(4, 8) RC(4, 9) RC(4,10) RC(4,11) RC(4,12)
        >;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        /* Row pins:
         *   Row 0: &pro_micro 8   (P0.08)
         *   Row 1: &pro_micro 9   (P0.09)
         *   Row 2: &gpio1 7       (P1.07)
         *   Row 3: &gpio1 2       (P1.02)
         *   Row 4: &gpio1 1       (P1.01)
         */
        row-gpios = <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&gpio1      7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&gpio1      2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&gpio1      1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;

        /* Column pins via 74HC595 shift-register chain:
         *   Two 595s daisy-chained â†’ 16 outputs, using 13 of them.
         */
        col-gpios = <&shifter  7 GPIO_ACTIVE_HIGH>, /* col  0 */
                    <&shifter  6 GPIO_ACTIVE_HIGH>, /* col  1 */
                    <&shifter  5 GPIO_ACTIVE_HIGH>, /* col  2 */
                    <&shifter  4 GPIO_ACTIVE_HIGH>, /* col  3 */
                    <&shifter  3 GPIO_ACTIVE_HIGH>, /* col  4 */
                    <&shifter  2 GPIO_ACTIVE_HIGH>, /* col  5 */
                    <&shifter 14 GPIO_ACTIVE_HIGH>, /* col  6 */                    <&shifter 13 GPIO_ACTIVE_HIGH>, /* col  7 */
                    <&shifter 12 GPIO_ACTIVE_HIGH>, /* col  8 */
                    <&shifter 11 GPIO_ACTIVE_HIGH>, /* col  9 */
                    <&shifter 10 GPIO_ACTIVE_HIGH>, /* col 10 */
                    <&shifter  9 GPIO_ACTIVE_HIGH>, /* col 11 */
                    <&shifter  8 GPIO_ACTIVE_HIGH>; /* col 12 */
    };

    left_encoder: encoder_left {
        status = "okay";
        compatible = "alps,ec11";
        a-gpios = <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <72>;
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder>;
        triggers-per-rotation = <24>;
    };
};