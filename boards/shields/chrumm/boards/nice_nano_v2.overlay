
&pro_micro_spi {
    status = "okay";

    /* Chip-select for the 74HC595 latch pin */
    cs-gpios = <&pro_micro 0 GPIO_ACTIVE_LOW>;

    shifter: 595@0 {
        compatible = "zmk,gpio-595";
        status = "okay";
        gpio-controller;
        #gpio-cells = <2>;
        spi-max-frequency = <200000>;
        reg = <0>;
        ngpios = <16>;    /* 2 x 74HC595 daisy chained? adjust to 8/16/24/32 */
    };
};
